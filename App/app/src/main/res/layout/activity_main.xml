<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/button2"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:background="@color/button"
        android:fontFamily="@font/annie_use_your_telescope"
        android:onClick="StopGame"
        android:text="Disconnect"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button11" />

    <Button
        android:id="@+id/button11"
        android:layout_width="138dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:background="@color/button"
        android:fontFamily="@font/annie_use_your_telescope"
        android:onClick="StartFaceDetection"
        android:text="Detect Face"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button10" />

    <Button
        android:id="@+id/button10"
        android:layout_width="144dp"
        android:layout_height="44dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="36dp"
        android:background="@color/button"
        android:fontFamily="@font/annie_use_your_telescope"
        android:onClick="StartGameFour"
        android:text="Memory Game"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button8" />

    <Button
        android:id="@+id/button9"
        android:layout_width="144dp"
        android:layout_height="44dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:background="@color/button"
        android:fontFamily="@font/annie_use_your_telescope"
        android:onClick="StartGameThree"
        android:text="Long Game"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

    <Button
        android:id="@+id/button8"
        android:layout_width="144dp"
        android:layout_height="44dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="36dp"
        android:background="@color/button"
        android:fontFamily="@font/annie_use_your_telescope"
        android:onClick="StartGameTwo"
        android:text="Say Hello"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button6" />

    <Button
        android:id="@+id/button7"
        android:layout_width="144dp"
        android:layout_height="44dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:background="@color/button"
        android:fontFamily="@font/annie_use_your_telescope"
        android:onClick="StartGameOne"
        android:text="Move Hands"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button6" />

    <Button
        android:id="@+id/button6"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        android:background="@color/button"
        android:fontFamily="@font/annie_use_your_telescope"
        android:onClick="createConnection"
        android:text="Connect"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>